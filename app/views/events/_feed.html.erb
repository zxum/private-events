          </div>
        </figure>

        <div class="media-content">
          <div class="content">
            <h2 class="title is-4"><%= link_to event.title, event_path(event)%></h2>
            Created by <strong><%= link_to event.creator.username, user_path(event.creator) %></strong></br>
            Location: <%= event.location %>
          </div>
        </div>

        <div class="media-right">
            <% if user_signed_in? && current_user.id == event.creator_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to edit_event_path(event), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
