<div class="column">
  <h2 class="title is-2">All Events</h2>
  <% @events.each do |event| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <strong><%= event.title %></strong></br>
            <small>Created by <%= event.creator.username %></small></br></br>

            <p>Date: <%= event.date %></p>
            <p>Location: <%= event.location %></p>

            <p><%= event.description %></p>

    <% if user_signed_in? && current_user.id == event.creator_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to event, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_event_path(event), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
    <% end %>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>