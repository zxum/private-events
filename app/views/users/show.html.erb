<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-8">
        <h2 class="title is-2 has-text-centered"><%= @user.username %>'s Events</h2>
        <div class="columns">
          <div class="column">
            <h3 class="subtitle has-text-centered">Created Events</h3>
            <% @user.created_events.each do |event|%>
              <div class="box">
              
                
                <article class="media">
                  <figure class="media-left">
                    <div class="datetime">
                      <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%^b") %></p>
                      <p class="has-text-primary has-text-centered has-text-weight-bold is-size-1"><%= event.date.strftime("%-d") %></p>
                      <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%Y") %></p>
                    </div>
                  </figure>

                  <div class="media-content">
                    <div class="content">
                      <h3 class="title "><%= link_to event.title, event_path(event) %></h2>
                      Location: <%= event.location %>
                    </div>
                  </div>

                  <div class="media-right">
                    <% if user_signed_in? && current_user.id == event.creator_id %>
                    <nav class="level">
                      <div class="level-left is-mobile">
                        <%= link_to edit_event_path(event), class: "level-item" do %>
                          <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                          <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
                      </div>
                    </nav>
                    <% end %>
                  </div>
                </article>
              </div>
            <% end %>
          </div>
        

          <div class="column">
            <h3 class="subtitle has-text-centered">Upcoming Events</h3>

            <% if @user.attended_events.upcoming.empty? %>
              <div class="box">
                <p>No Upcoming Events</p>
              </div>
            <% else %>
              <% @user.attended_events.upcoming.each do |event| %>
                <div class="box">
                    <article class="media">
                      <figure class="media-left">
                        <div class="datetime">
                          <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%^b") %></p>
                          <p class="has-text-primary has-text-centered has-text-weight-bold is-size-1"><%= event.date.strftime("%-d") %></p>
                          <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%Y") %></p>
                        </div>
                      </figure>

                      <div class="media-content">
                        <div class="content">
                          <h3 class="title "><%= link_to event.title, event_path(event) %></h2>
                          Location: <%= event.location %>
                        </div>
                      </div>

                      <div class="media-right">
                        <% if user_signed_in? && current_user.id == event.creator_id %>
                        <nav class="level">
                          <div class="level-left is-mobile">
                            <%= link_to edit_event_path(event), class: "level-item" do %>
                              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <% end %>
                          </div>
                        </nav>
                        <% end %>
                      </div>
                    </article>
                </div>
              <% end %>
            <% end %>

            <h3 class="subtitle has-text-centered">Past Events</h3>

            <% if @user.attended_events.past.empty? %>
              <div class="box">
                <p>No Upcoming Events</p>
              </div>
            <% else %>
              <% @user.attended_events.past.each do |event| %>
                <div class="box">
                    <article class="media">
                      <figure class="media-left">
                        <div class="datetime">
                          <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%^b") %></p>
                          <p class="has-text-primary has-text-centered has-text-weight-bold is-size-1"><%= event.date.strftime("%-d") %></p>
                          <p class="has-text-primary has-text-centered has-text-weight-semibold is-size-4"><%= event.date.strftime("%Y") %></p>
                        </div>
                      </figure>

                      <div class="media-content">
                        <div class="content">
                          <h3 class="title "><%= link_to event.title, event_path(event) %></h2>
                          Location: <%= event.location %>
                        </div>
                      </div>

                      <div class="media-right">
                        <% if user_signed_in? && current_user.id == event.creator_id %>
                        <nav class="level">
                          <div class="level-left is-mobile">
                            <%= link_to edit_event_path(event), class: "level-item" do %>
                              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <% end %>
                          </div>
                        </nav>
                        <% end %>
                      </div>
                    </article>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      
    </div>
  </div>
</div>